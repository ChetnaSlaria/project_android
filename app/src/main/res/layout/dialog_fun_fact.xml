<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@null"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin16"
            app:cardCornerRadius="@dimen/margin16">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:background="@color/colorWhite"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Experience"
                      android:gravity="center"
                      android:textSize="@dimen/text16"
                      android:textColor="@color/textColorDark"
                      android:padding="@dimen/margin8"
            android:id="@+id/fact_name"/>
            <EditText android:layout_width="match_parent"
                      android:layout_height="120dp"
                      android:gravity="start"
                      android:layout_marginTop="@dimen/margin4"
                      android:layout_marginBottom="@dimen/margin4"
                      android:layout_marginEnd="@dimen/margin12"
                      android:layout_marginStart="@dimen/margin12"
                      android:background="@drawable/edit_bg"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Save"
                      android:layout_margin="@dimen/margin8"
                      android:textSize="@dimen/text18"
                      android:textColor="@color/colorPrimary"
                      android:background="@drawable/unselected"
                      android:paddingStart="@dimen/margin20"
                      android:paddingEnd="@dimen/margin20"
                      android:paddingTop="@dimen/margin8"
                      android:paddingBottom="@dimen/margin8"
                      android:layout_gravity="center"
            android:id="@+id/fact_save"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>