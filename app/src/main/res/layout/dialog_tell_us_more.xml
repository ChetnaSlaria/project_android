<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:elevation="8dp"
        android:minWidth="340dp"
        android:orientation="vertical"
        android:padding="6dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="Tell us more"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/margin12"
            android:text="Please tell us more information. Don't worry , we won't tell them"
            android:textSize="16sp" />

    <EditText
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/edit_background"
            android:gravity="start"
            android:hint="Tell us what happened...(Optional)"
            android:padding="12dp"
            android:textAlignment="viewStart" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="@dimen/margin12"
            android:text="280 characters to limit"
            android:textSize="16sp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="@dimen/margin12"
                android:text="Also block"
                android:textSize="16sp" />

        <Switch
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp" />
    </LinearLayout>

    <TextView
            android:id="@+id/send"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/margin8"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:padding="12dp"
            android:text="Send"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold" />

</LinearLayout>