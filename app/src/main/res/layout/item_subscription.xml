<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="@dimen/margin8"
        android:orientation="vertical">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/black_transparent"
            android:padding="@dimen/margin8">

        <LinearLayout
                android:paddingStart="@dimen/margin8"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/text_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/domine"
                    android:text="Get 7 days free"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/text18"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/text_off"
                    android:fontFamily="@font/domine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_get"
                    android:layout_centerVertical="true"
                    android:text="Save 50%"
                    android:textColor="@color/colorOrange"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/text_price"
                    android:fontFamily="@font/domine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_off"
                    android:text="$ 60 Yearly"
                    android:textColor="@color/colorYellow"
                    android:textSize="@dimen/text16" />

            <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/popular"
                    android:fontFamily="@font/domine"
                    android:padding="2dp"
                    android:visibility="gone"
                    android:paddingStart="@dimen/margin8"
                    android:paddingEnd="@dimen/margin8"
                    android:layout_width="wrap_content"
                    android:background="@drawable/popular_background"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_off"
                    android:layout_gravity="end"
                    android:text="Most Popular"
                    android:textColor="@color/colorPurple"
                    android:textSize="@dimen/text16" />


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>