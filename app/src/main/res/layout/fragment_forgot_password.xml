<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <EditText android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin12"
            android:inputType="textEmailAddress"
            android:textAlignment="viewStart"
            android:textDirection="locale"

            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/edit_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/margin16"
            android:layout_marginStart="@dimen/margin16"
            android:layout_marginEnd="@dimen/margin16"
            android:id="@+id/forgotEmail"
            />
    <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/forgotEmail"
            app:layout_constraintStart_toStartOf="@id/forgotEmail"
            android:layout_marginTop="@dimen/margin16"
            android:textAlignment="viewStart"
            android:textDirection="locale"
            android:id="@+id/email"
            android:text="Email"
            android:background="@drawable/edit_background"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toTopOf="@id/forgotEmail"
            android:textSize="14sp"
            android:paddingTop="@dimen/margin4"
            android:paddingBottom="@dimen/margin4"
            android:paddingStart="@dimen/margin16"
            android:paddingEnd="@dimen/margin16"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />
