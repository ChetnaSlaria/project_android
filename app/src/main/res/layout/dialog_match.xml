<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:elevation="8dp"
        android:layout_margin="@dimen/margin4"
        android:padding="@dimen/margin4">
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Itâ€™s a match"
        android:layout_gravity="center"
        android:textSize="@dimen/margin24"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="you and the username has matched"
            android:textSize="@dimen/text18"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:id="@+id/match_text"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8">
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="@dimen/margin8"
                android:layout_gravity="center"
                android:id="@+id/yourImage"
                android:layout_weight="1"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="@dimen/margin8"
                android:layout_gravity="center"
                android:id="@+id/likedUserImage"
                android:layout_weight="1"/>
    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:layout_gravity="center"
            android:textSize="@dimen/margin16"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/margin12"
            android:id="@+id/matchOk"
            android:background="@drawable/btn_bg"
           android:layout_margin="@dimen/margin8"
           android:backgroundTint="@color/textColorLight"
            android:textColor="@color/colorWhite"/>
</LinearLayout>