<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin8"
        android:background="@drawable/btn_bg"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="6dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="Reporting"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/margin12"
            android:text="Please tell us more information. Don't worry , we won't tell them"
            android:textSize="16sp" />

    <TextView
            android:id="@+id/inappropriate_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/chat_bubble"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:text="Inappropriate message"
            android:textSize="16sp" />

    <TextView
            android:id="@+id/inappropriate_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/profile1"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:text="Inappropriate profile"
            android:textSize="16sp" />

    <TextView
            android:id="@+id/scam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/scan"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:text="Scam or spam"
            android:textSize="16sp" />

    <TextView
            android:id="@+id/other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/other"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:text="Other"
            android:textSize="16sp" />

</LinearLayout>