<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin8">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="8dp"
            app:cardCornerRadius="@dimen/margin16">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin8">
            <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/search_image"
                                                          android:layout_width="40dp"
                                                          android:layout_height="40dp"
                                                          android:layout_centerVertical="true"
                                                          android:layout_alignParentStart="true"
                                                          android:scaleType="centerCrop"
                                                          android:src="@drawable/girl6"
            />
            <TextView android:id="@+id/search_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="@dimen/margin8"
                      android:text="Augusta"
                      android:textColor="@color/textColorDark"
                      android:layout_toRightOf="@id/search_image"
                      android:textSize="@dimen/text16"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/search_name"
                      android:text="abc@gmail.com"
                      android:textSize="@dimen/text14"
                      android:layout_toRightOf="@id/search_image"
                      android:layout_marginStart="@dimen/margin8"/>
            <ImageView android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:padding="4dp"
                       android:layout_centerVertical="true"
                       android:layout_alignParentEnd="true"
                       android:src="@drawable/audio_call_dark"
            android:id="@+id/audio_call"/>
            <ImageView android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:padding="@dimen/margin4"
                       android:layout_marginEnd="@dimen/margin12"
                       android:layout_centerVertical="true"
                       android:src="@drawable/video_icon"
            android:layout_toLeftOf="@id/audio_call"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
