<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TopView" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:padding">@dimen/margin24</item>
        <item name="android:textSize">@dimen/text20</item>
        <item name="android:gravity">center_horizontal</item>

    </style>


    <style name="MyDatePicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>
</resources>
